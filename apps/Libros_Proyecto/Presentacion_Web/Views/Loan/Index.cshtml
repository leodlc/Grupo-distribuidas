@model IEnumerable<Data.PRESTAMO>

@Html.Partial("_NavBar")

@{
    ViewBag.Title = "Lista de Préstamos";
}

<div class="content-wrapper">
    <div class="text-center mb-3">
        <h2>Préstamos Registrados</h2>
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#createModal">Agregar Préstamo</button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>Cliente</th>
                    <th>Libro</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prestamo in Model)
                {
                    <tr>
                        <td data-idcliente="@prestamo.IDCLIENTE" class="cliente-name"></td>
                        <td data-idlibro="@prestamo.IDLIBRO" class="libro-name"></td>
                        <td>@(prestamo.FECHAINIPREST?.ToString("yyyy-MM-dd HH:mm:ss") ?? "")</td>
                        <td>@(prestamo.FECHAFINPREST?.ToString("yyyy-MM-dd HH:mm:ss") ?? "")</td>
                        <td>@prestamo.DESCRPREST</td>
                        <td>
                            <button type="button" class="btn btn-secondary edit-btn" data-toggle="modal" data-target="#editModal"
                                    data-idcliente="@prestamo.IDCLIENTE" data-idlibro="@prestamo.IDLIBRO">
                                <i class="fal fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal para Crear -->
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="createModalLabel">Crear Préstamo</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.Partial("_CrearPrestamoForm", new Data.PRESTAMO())
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para Editar -->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="editModalLabel">Editar Préstamo</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Aquí se cargará el formulario de edición mediante AJAX -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Agrega jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Agrega los scripts de Bootstrap -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        // Función para cargar los nombres de clientes
        function cargarNombresClientes() {
            $('.cliente-name').each(function () {
                var clienteId = $(this).data('idcliente');
                var element = $(this);
                $.ajax({
                    url: 'http://localhost:54845/api/client/getbyid/' + clienteId,
                    type: 'GET',
                    success: function (data) {
                        element.text(data.NOMBRECLIENTE + ' ' + data.APELLIDOCLIENTE);
                    },
                    error: function () {
                        element.text('Cliente no encontrado');
                    }
                });
            });
        }

        // Función para cargar los nombres de libros
        function cargarNombresLibros() {
            $('.libro-name').each(function () {
                var libroId = $(this).data('idlibro');
                var element = $(this);
                $.ajax({
                    url: 'http://localhost:54845/api/book/GetById/' + libroId,
                    type: 'GET',
                    success: function (data) {
                        element.text(data.NOMBRELIBRO);
                    },
                    error: function () {
                        element.text('Libro no encontrado');
                    }
                });
            });
        }

        // Llamar a las funciones para cargar los nombres de clientes y libros al cargar la página
        cargarNombresClientes();
        cargarNombresLibros();

        // Mostrar formulario de edición al abrir el modal de editar
        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var idCliente = button.data('idcliente');
            var idLibro = button.data('idlibro');
            var modal = $(this);

            // Cargar el formulario de edición usando AJAX
            $.ajax({
                url: '@Url.Action("Create", "Loan")',
                type: 'GET',
                data: { idCliente: idCliente, idLibro: idLibro },
                success: function (data) {
                    modal.find('.modal-body').html(data);
                },
                error: function () {
                    alert('Error al cargar el formulario de edición.');
                }
            });
        });

        // Evitar la recarga de la página al cerrar el modal de edición
        $('#editModal').on('hidden.bs.modal', function () {
            // Recargar solo los datos de la tabla, no la página completa
            cargarNombresClientes();
            cargarNombresLibros();
        });
    });
</script>
